<?xml version="1.0" encoding="UTF-8" standalone="no"?> 
<!DOCTYPE preferences SYSTEM 
    "http://java.sun.com/dtd/preferences.dtd"> 
<preferences EXTERNAL_XML_VERSION="1.0"> 
  <root type="user"> 
    <map/> 
    <node name="/edu/brandeis/cs/steele/wn/"> 
      <map>
        <!-- TODO add OS specific defaults -->
        <entry key="WNHOME" value=""/> 
      </map>
      <node name="/edu/brandeis/cs/steele/wn/browser"> 
        <map>
          <!-- 
            "System" will be interpretted as UIManager.getSystemLookAndFeelClassName() 
            "CrossPlatform" will be interpretted as UIManager.getCrossPlatformLookAndFeelClassName() 
          -->
          <entry key="lookAndFeel" value="System"/> 
          <entry key="antiAliased" value="true"/> 
          <!-- "0" will be interpretted as use system default -->
          <entry key="fontSize" value="0"/> 
          <entry key="saveWindowsSizes" vaue="true"/>
          <entry key="saveWindowsPositions" vaue="true"/>
        </map>
        <node name="/edu/brandeis/cs/steele/wn/browser/Browser"> 
          <map>
            <entry key="width" value="640"/> 
            <entry key="height" value="480"/> 
            <!-- "-1","-1" will be interpretted as centered on screen -->
            <entry key="x" value="-1"/>
            <entry key="y" value="-1"/> 
          </map> 
        </node>
        <node name="/edu/brandeis/cs/steele/wn/browser/BrowserPanel"> 
          <map> 
            <!-- TODO how to represent search history ? -->
          </map> 
        </node>
        <node name="/edu/brandeis/cs/steele/wn/browser/SearchFrame"> 
          <map>
            <!-- "0" will be interpretted as preferred width -->
            <entry key="width" value="0"/> 
            <entry key="height" value="300"/> 
            <!-- "-1","-1" will be interpretted as adjacent to Browser -->
            <entry key="x" value="-1"/> 
            <entry key="y" value="-1"/> 
            <entry key="searchType" value="SUBSTRING"/>
            <!-- TODO how to represent search history ? -->
          </map> 
        </node>
      </node>
    </node>
  </root> 
</preferences>
